<OptionScreen>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        md_bg_color: "#131314"

        MDSegmentedButton:
            id: segment
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint_x: .9
            selected_color: "#303A29"
            line_color: "#343930"
            line_width: 1.02
            on_marked: app.on_marked(*args)

            OSV0I:
                text: 'Main'
                key: 'main'

            OSV0I:
                text: 'Vavoo'
                key: 'vavoo'

            OSV0I:
                text: 'Xstream'
                key: 'xstream'

        MDScrollView:
            id: scrollview
            name: 'scrollview'

            MDList:
                id: list

